!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title= locals.name
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Fredericka+the+Great')
      link(rel='stylesheet', href='/css/normalize.css')
      link(rel='stylesheet', href='/css/main.css')
  body
    header
      div#header
        block header
          h2
            img(src="/btb/images/logo.png")
          p= locals.description
          nav
            ul 
              - var sections = contents['index.json'].metadata.sections
              each section in sections
                li
                  a(href=section.url)= section.title
    div#content
      block content
